{
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "globalReturn": false,
    "ecmaFeatures": {
      "jsx": true,
      "defaultParams": true,
      "destructuring": true,
      "experimentalObjectRestSpread": true,
      "impliedStrict": true,
      "restParams": true,
      "spread": true,
      "templateStrings": true
    }
  },
  "extends": ["react-app", "plugin:react/recommended", "plugin:prettier/recommended"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "jsx-quotes": "warn",
    "require-await": "error",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  }
}
